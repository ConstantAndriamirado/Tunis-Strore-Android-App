<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFFFFF">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- Header orange -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:orientation="vertical"
                android:padding="24dp"
                android:background="@drawable/header_background"
                android:gravity="center">

                <TextView
                    android:id="@+id/btnRetour"
                    android:minHeight="48dp"
                    android:paddingVertical="12dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="&lt; Retour"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp"
                    android:layout_gravity="start"
                    android:clickable="true" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Créer"
                    android:textColor="#FFFFFF"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:layout_marginTop="6dp"
                    android:layout_gravity="start" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Un compte"
                    android:textColor="#FFFFFF"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:layout_gravity="start" />
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="24dp">

                <!-- Nom et prénom -->
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Nom et prénom"
                        android:textColor="#FF4216"
                        android:textSize="14sp" />

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Nom et prénoms"
                        android:minHeight="48dp"
                        android:paddingVertical="12dp"
                        android:inputType="textPersonName"
                        android:importantForAccessibility="yes"
                        android:background="@android:color/transparent"
                        android:textColor="#000000"
                        android:textSize="16sp"
                        android:paddingBottom="5dp"
                        android:layout_marginTop="2dp" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:background="#FF4216" />
                </LinearLayout>

                <!-- Adresse email -->
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Adresse email"
                        android:textColor="#FF4216"
                        android:textSize="14sp" />

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Adresse email"
                        android:inputType="textEmailAddress"
                        android:minHeight="48dp"
                        android:paddingVertical="12dp"
                        android:importantForAccessibility="yes"
                        android:background="@android:color/transparent"
                        android:textColor="#000000"
                        android:textSize="16sp"
                        android:paddingBottom="5dp"
                        android:layout_marginTop="2dp" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:background="#FF4216" />
                </LinearLayout>

                <!-- Numéro de téléphone -->
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Numéro de téléphone"
                        android:textColor="#FF4216"
                        android:textSize="14sp" />

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Numéro de téléphone"
                        android:inputType="phone"
                        android:minHeight="48dp"
                        android:paddingVertical="12dp"
                        android:importantForAccessibility="yes"
                        android:background="@android:color/transparent"
                        android:textColor="#000000"
                        android:textSize="16sp"
                        android:paddingBottom="5dp"
                        android:layout_marginTop="2dp" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:background="#FF4216" />
                </LinearLayout>

                <!-- Créer un mot de passe -->
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Créer un mot de passe"
                        android:textColor="#FF4216"
                        android:textSize="14sp" />

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Créer un mot de passe"
                        android:inputType="textPassword"
                        android:minHeight="48dp"
                        android:paddingVertical="12dp"
                        android:importantForAccessibility="yes"
                        android:background="@android:color/transparent"
                        android:textColor="#000000"
                        android:textSize="16sp"
                        android:paddingBottom="5dp"
                        android:layout_marginTop="2dp" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:background="#FF4216" />
                </LinearLayout>

                <!-- Confirmer le mot de passe -->
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Confirmer le mot de passe"
                        android:textColor="#FF4216"
                        android:textSize="14sp" />

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Confirmer le mot de passe"
                        android:inputType="textPassword"
                        android:importantForAccessibility="yes"
                        android:background="@android:color/transparent"
                        android:textColor="#000000"
                        android:textSize="16sp"
                        android:minHeight="48dp"
                        android:paddingVertical="12dp"
                        android:paddingBottom="5dp"
                        android:layout_marginTop="2dp" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:background="#FF4216" />
                </LinearLayout>

                <!-- Date de naissance -->
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Date de naissance"
                        android:textColor="#FF4216"
                        android:textSize="14sp" />

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Date de naissance"
                        android:focusable="false"
                        android:inputType="none"
                        android:importantForAccessibility="yes"
                        android:background="@android:color/transparent"
                        android:textColor="#000000"
                        android:minHeight="48dp"
                        android:paddingVertical="12dp"
                        android:textSize="16sp"
                        android:paddingBottom="5dp"
                        android:layout_marginTop="2dp" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:background="#FF4216" />
                </LinearLayout>

                <!-- Checkbox des conditions -->
                <CheckBox
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="En créant un compte, vous acceptez nos conditions d’utilisation et notre politique de confidentialité."
                    android:textColor="#000000"
                    android:layout_marginTop="24dp" />

                <!-- Bouton -->
                <Button
                    android:id="@+id/creerMonCompte"
                    android:layout_width="match_parent"
                    android:layout_height="49dp"
                    android:text="Créer mon compte"
                    android:textColor="#FFFFFF"
                    android:layout_marginTop="24dp"
                    android:background="@drawable/rounded_orange" />

                <!-- Lien de connexion -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Vous avez déjà un compte Appla TN ?\nconnectez-vous"
                    android:textColor="#FF4216"
                    android:textSize="16sp"
                    android:layout_marginTop="24dp"
                    android:gravity="center"
                    android:layout_gravity="center" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</layout>
